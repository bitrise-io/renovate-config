{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>bitrise-io/renovate-config"],
  "description": "Default Renovate configuration for Internal Platform Deployment repositories",
  "addLabels": ["renovate-internal-platform-deployments"],
  "baseBranches": ["staging"],
  "dependencyDashboard": true,
  "groupName": "all",
  "packageRules": [{
    "matchPackagePatterns": ["*"],
    "enabled": true
  }],
  "postUpdateOptions": ["helmUpdateSubChartArchives"],
  "schedule": ["after 9am on monday"],
  "timezone": "UTC"
}
