{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>bitrise-io/renovate-config",
    ":dependencyDashboard",
    "group:all",
    "schedule:weekly"
  ],
  "description": "Default Renovate configuration for Internal Platform repositories",
  "labels": ["renovate", "renovate-internal-platform"],
  "patch": {
    "enabled": false
  },
  "digest": {
    "enabled": false
  },
  "packageRules": [{
    "matchPackagePatterns": ["*"],
    "enabled": true
  }]
}
