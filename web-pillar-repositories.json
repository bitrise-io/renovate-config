{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automergeSchedule": ["at 10am on Monday except on 25th of December in 2023 and 1st of January 2024 and 1st of April 2024 and 20th of May 2024 and 19th of August 2024"],
  "description": "Default Renovate configuration for Web Pillar repositories",
  "extends": [
    ":dependencyDashboard"
  ],
  "labels": ["renovate", "renovate-web-pillar-repositories"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "groupName": null
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "groupName": "all non-major updates"
    },
    {
      "enabled": true,
      "matchDepTypes": ["indirect"],
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["major"],
      "groupName": null
    },
    {
      "enabled": true,
      "matchDepTypes": ["indirect"],
      "matchManagers": ["gomod"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "groupName": "all non-major updates"
    },
    {
      "automerge": true,
      "matchUpdateTypes": ["patch"]
    },
    {
      "automerge": true,
      "enabled": true,
      "matchDepTypes": ["indirect"],
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["patch"]
    },
    {
      "matchDatasources": ["rubygems"],
      "addLabels": ["rubygem"],
      "groupName": "ruby gems"
    },
    {
      "matchDatasources": ["go"],
      "addLabels": ["go"],
      "groupName": "go modules"
    },
    {
      "matchDatasources": ["npm"],
      "addLabels": ["npm"],
      "groupName": "npm packages"
    }
  ],
  "postUpdateOptions": ["gomodTidy"],
  "rebaseWhen": "auto",
  "transitiveRemediation": true,
  "vulnerabilityAlerts": {
    "automerge": false,
    "enabled": true
  }
}
